<div id="generalDialog" style="z-index: 3000" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="generalDialogLabel" aria-hidden="true">

	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="generalDialogLabel">{{ generalDialogTitle }}</h4>
			</div>

			<div class="modal-body">
				<div class="form-horizontal">

					<div class="form-group">
						<label class="control-label col-sm-3">{{ generalDialogLabel }}</label>
						<div class="col-sm-9">
							<input type="hidden" data-ng-model="generalDialogHiddenText" />
							<input type="search" class="form-control ltr" data-ng-model="generalDialogText" />
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-9 col-sm-offset-3" data-ng-switch="generalDialogState">
							<button type="button" class="btn btn-primary" data-ng-switch-when="1" data-ng-click="clickOnDoCreateDirectoryButton()">Create Directory</button>
							<button type="button" class="btn btn-primary" data-ng-switch-when="2" data-ng-click="clickOnDoRenameButton()">Rename</button>
							<button type="button" class="btn btn-primary" data-ng-switch-when="3" data-ng-click="clickOnDoCompressButton()">Compress</button>
						</div>
					</div>

				</div>
			</div>

		</div>
	</div>

</div>
