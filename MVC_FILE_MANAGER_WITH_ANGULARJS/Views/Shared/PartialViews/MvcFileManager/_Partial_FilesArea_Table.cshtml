@{
	MvcFileManager.Initializer
		oInitializer = new MvcFileManager.Initializer();
}

<div class="row files-area-table" style="font-size: 8pt">

	<div class="col-sm-12 table-responsive">

		<table class="table-bordered table-condensed table-hover table-responsive table-striped" style="width: 100%">
			<tr>
				<th width="50">
					Type
				</th>
				<th width="50">
					Select
				</th>
				<th width="50">
					Action
				</th>
				<th>
					Name
				</th>
				<th width="100">
					Length
				</th>
				<th width="120">
					Creation Time
				</th>
				<th width="120">
					Last Write Time
				</th>
				<th width="120">
					Last Access Time
				</th>
				<th width="200">
					Message
				</th>
			</tr>

			<tr data-ng-repeat="item in files | filter: filesFilter | orderBy: filesSort" on-repeat-done="doSomethingAfterRepeatDone">
				<td>
					<span class="glyphicon glyphicon-file" aria-hidden="true"></span>
				</td>
				<td>
					<input type="checkbox" data-ng-model="item.IsSelected" />
				</td>
				<td>
					<a href="#" onclick="return (false);" data-toggle="tooltip" data-placement="top" title="Rename" data-ng-click="rename(item)">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>

					<a href="@(oInitializer.Path)/Download?path={{ path }}&filename={{ item.Name }}" data-toggle="tooltip" data-placement="top" title="Download">
						<span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
					</a>
				</td>
				<td>
					{{ item.Name }}
				</td>
				<td>
					{{ item.Length }}
				</td>
				<td>
					{{ item.DisplayCreationTime }}
				</td>
				<td>
					{{ item.DisplayLastWriteTime }}
				</td>
				<td>
					{{ item.DisplayLastAccessTime }}
				</td>
				<td class="bg-danger">
					{{ item.Message }}
				</td>
			</tr>
		</table>

	</div>

</div>
